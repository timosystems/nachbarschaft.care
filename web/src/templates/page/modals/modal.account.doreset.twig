<div class="modal" tabindex="-1" role="dialog" id="modal_pwreset_do">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-key mr-1"></i>Passwort zurücksetzen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bitte gebe dein neues Passwort ein:</p>
                <form method="POST" action="/src/pwreset.php">
                    <input id="dopwre_token" name="dopwre_token" class="form-control" type="hidden" value="{{ pw_reset_token }}">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="width: 120px;">Passwort:</span>
                        </div>
                        <input required="required" id="dopwre_newpassword" name="dopwre_newpassword" class="form-control" type="password" aria-label="Neues Passwort">
                    </div>
                    <div class="alert alert-secondary p-2 mb-0"><span><i class="fas fa-info-circle mr-1"></i>Mindestens 8 Zeichen mit Buchstaben und Zahlen</span></div>
                </form>
            </div>
            <div class="btn-group">
                <button class="btn btn-block btn-success no-radius" type="Submit"><i class="fas fa-check mr-1"></i>Passwort ändern</button>
            </div>
            <div class="modal-footer">
                {{ include('modals/parts/modal.part.footer.twig') }}
            </div>
        </div>
    </div>
</div>
{% if modal == 'dopwreset' %}
<script type="text/javascript">
    $('#modal_pwreset_do').modal();
</script>
{% endif %}